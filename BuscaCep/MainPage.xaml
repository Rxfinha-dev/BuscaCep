<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BuscaCep.MainPage"
             xmlns:viewModels="clr-namespace:BuscaCep.ViewModels"
             x:DataType="viewModels:BuscaCepViewModel">

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="25">

            <Entry 
                Text="{Binding CEP}" 
                Keyboard="Numeric" 
                MaxLength="9"/>
            <Button
                x:Name="CounterBtn"
                Clicked="OnCounterClicked"             
                Text="Buscar"/>

            <VerticalStackLayout Spacing="16">
                <HorizontalStackLayout Spacing="25">
                    <Label Text="Logradouro: " FontAttributes="Bold"/>
                    <Label x:Name="lblLogradouro" Text="-"/>
                </HorizontalStackLayout>

                <HorizontalStackLayout Spacing="25">
                    <Label Text="Bairro: " FontAttributes="Bold"/>
                    <Label x:Name="lblBairro" Text="-"/>
                </HorizontalStackLayout>

                <HorizontalStackLayout Spacing="25">
                    <Label Text="Localidade: " FontAttributes="Bold"/>
                    <Label x:Name="lblLocalidade" Text="-"/>
                </HorizontalStackLayout>

                <HorizontalStackLayout Spacing="25">
                    <Label Text="UF: " FontAttributes="Bold"/>
                    <Label x:Name="lblLUF" Text="-"/>
                </HorizontalStackLayout>

                <HorizontalStackLayout Spacing="25">
                    <Label Text="DDD: " FontAttributes="Bold"/>
                    <Label x:Name="lblDDD" Text="-"/>
                </HorizontalStackLayout>
            </VerticalStackLayout>



        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
